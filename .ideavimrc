set clipboard+=unnamedplus
let mapleader = " "

set multiple-cursors
set surround
set hlsearch
set incsearch

inoremap jj <Esc>
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>

" 搜索功能
nnoremap <leader>fg :action SearchEverywhere<CR>
nnoremap <leader>ff :action FindInPath<CR>
" 取消当前搜索高亮 (No Highlight)
nnoremap <leader>nh :nohlsearch<CR>

nnoremap <leader>F :action ReformatCode<CR>
nnoremap <leader>o o<Esc>
nnoremap <leader>O O<Esc>

nnoremap <leader>j :action MoveLineDown<CR>
nnoremap <leader>k :action MoveLineUp<CR>

" 侧边栏开关
nnoremap <leader>e :action ProjectView.StopGuiDesignerAction<CR>:action ActivateProjectToolWindow<CR>

nnoremap gd :action GotoDefinition<CR>
nnoremap gr :action ShowUsages<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap K  :action QuickJavaDoc<CR>
nnoremap <leader>rn :action RenameElement<CR>

nnoremap <leader>d :action GotoPreviousError<CR>
nnoremap [d :action GotoPreviousError<CR>
nnoremap ]d :action GotoNextError<CR>

nnoremap <C-n> :action SelectNextOccurrence<CR>
nnoremap N :action UnselectOccurrence<CR>

" x 不进寄存器
nnoremap x "_x
vnoremap x "_x

vnoremap <leader>j :action MoveLineDown<CR>
vnoremap <leader>k :action MoveLineUp<CR>
vnoremap <C-n> :action SelectNextOccurrence<CR>
vnoremap N :action UnselectOccurrence<CR>